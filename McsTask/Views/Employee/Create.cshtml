@using McsTask.Core.Enums
@using McsTask.Models.Entities
@model Employee

@{
    ViewData["Title"] = "Add Employee";
}

<h1>Add Employee</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Name" class="control-label my-1"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Address" class="control-label my-1"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="BirthDate" class="control-label my-1"></label>
                <input type = "date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Graduation" class="control-label my-1"></label>
                <input asp-for="Graduation" class="form-control" />
                <span asp-validation-for="Graduation" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="EmploymentType" class="control-label my-1"></label>
                <select asp-for="EmploymentType" asp-items="Html.GetEnumSelectList<EmploymentType>()" class="form-control"></select>
                <span asp-validation-for="EmploymentType" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Assurance" class="control-label my-1"></label>
                <input asp-for="Assurance" class="form-control" />
                <span asp-validation-for="Assurance" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Salary" class="control-label my-1"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}